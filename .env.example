# Core app settings
DEBUG=false
LOG_LEVEL=INFO

# Auth (choose one or both depending on middleware usage)
SECRET_KEY=change_me_secret
TOKEN=change_me_token

# OpenAI / Agents
OPENAI_API_KEY=sk-...

# Playwright runtime
# In Docker prod, bind-mount ./artifacts:/app/artifacts and keep this path
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_STEALTH=true
PLAYWRIGHT_DEBUG_ARTIFACTS=false
PLAYWRIGHT_DEBUG_PRINT=false
PLAYWRIGHT_DEBUG_PRINT_MAX=10000
PLAYWRIGHT_ARTIFACT_DIR=/app/artifacts
# Optional Playwright upstream proxy
# PLAYWRIGHT_PROXY_SERVER=http://pr.oxylabs.io:7777
# PLAYWRIGHT_PROXY_USERNAME=customer-username-cc-US
# PLAYWRIGHT_PROXY_PASSWORD=change_me_password
PROXY_ENABLED=false

SITEMAP_DIR=/app/sitemap_data
SITEMAP_WORKER_THREADS=4
PARALLEL_URL_TO_SCRAPE=10
MAX_PROPERTY_TO_SCRAPE=10

# Optional: uncomment to tweak container timezone (may affect date pickers)
# TZ=Asia/Manila

# Scheduler (APScheduler)
# Cron expression for the sample job (default hourly if unset)
# Examples: "0 3 * * *" (daily 03:00), "*/15 * * * *" (every 15 min)
CRON_POPULAR=0 * * * *
CRON_BOOKING_SITEMAP_MATERIALIZE=0 * * * *
CRON_BOOKING_SITEMAP=0 * * * *

# Notes
# - Do NOT commit real secrets. This is a template; copy to ".env" and edit.
# - docker-compose-prod.yml reads this file via env_file.

SQLALCHEMY_DATABASE_URI=postgresql://<user>:<password>@<host>/<db_name>
